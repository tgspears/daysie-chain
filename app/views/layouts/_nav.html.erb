<% if @current_user %>
	<nav class="navbar navbar-default" role="navigation">
		<!-- Brand and toggle get grouped for better mobile display -->

		<div class="navbar-header brand-logo">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".mobile-collapse">
				<li class="mobile-user-avi">
					<% unless @current_user.image == nil%>
						<a href="/users/<%= @current_user.id %>/groups"> <h class="user-name"> <%= @current_user.firstname %> </h> <%= cl_image_tag(@current_user.image, :width => 50, :height => 50, :crop => :fill, :gravity => :face, :class => "user_picture") %></a>
					<% else %>
						<a href="/users/<%= @current_user.id %>/groups"> <h class="user-name"> <%= @current_user.firstname %> </h> <%= image_tag("user_default.jpg", :width => 50, :height => 50, :crop => :fill, :class => "user_picture") %></a>
					<% end %>
				</li>
				<span class="btn-md btn glyphicon glyphicon-cog"><b class="caret"></b></span>
			</button>

			<a class="navbar-brand" href="/users/<%= @current_user.id %>/groups"><%= image_tag("daysie-chain-logo.png", :class=> "logo") %> | Daysie Chain</a>
		</div>
		<div class="collapse navbar-collapse navbar-ex1-collapse">
		<!-- Collect the nav links, forms, and other content for toggling -->
			<ul class="nav navbar-nav navbar-right">
				<li>
					<a href="/users/<%= @current_user.id %>/groups"> <h class="user-name">
						<%= @current_user.firstname %> </h><%= cl_image_tag(@current_user.image, :width => 50, :height => 50, :crop => :fill, :gravity => :face, :class => "user_picture") %>
					</a>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="btn-lg btn glyphicon glyphicon-cog">  <b class="caret"></b></span></a>
					<ul class="dropdown-menu">
						<li><a class="nav_buttons" data-toggle="modal" href="<%= edit_user_path(@current_user) %>" data-target='#user_edit'>Edit User Settings</a></li>
						<li><a class="nav_buttons" href="/logout">Log out</a></li>
					</ul>
				</li>
			</ul>
		</div><!-- /.navbar-collapse -->
		<div class="collapse navbar-collapse navbar-ex1-collapse mobile-collapse">
			<ul class="nav_menu nav navbar-nav navbar-right">
				<li class="pull-right"><a class="nav_buttons"data-toggle="modal" data-target='#user_edit' href="<%= edit_user_path(@current_user) %>">Edit User Settings</a></li>
				<li class="pull-right"><p class="nav_pipe"><strong>  |  </strong></p></li>
				<li class="pull-right"><a class="nav_buttons"href="/logout">Log out</a></li>
			</ul>
		</div><!-- /.navbar-collapse -->

	</nav>
<% end %>


<div class="fade modal my_modal_class" id="user_edit">
	<div class="modal-dialog">
		<div class="modal-content">
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->